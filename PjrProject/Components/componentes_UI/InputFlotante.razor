<div class="input-flotante">
    <input value="@Valor"
           @oninput="OnInput"
           type="@Tipo"
           placeholder="@Placeholder"
           min="@Min"
           required />
    <label>@Label</label>
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Tipo { get; set; } = "text";
    [Parameter] public string Valor { get; set; } = "";
    [Parameter] public EventCallback<string> ValorChanged { get; set; }
    [Parameter] public string Placeholder { get; set; } = "";
    [Parameter] public string? Min { get; set; }

    private async Task OnInput(ChangeEventArgs e)
    {
        Valor = e.Value?.ToString() ?? "";
        await ValorChanged.InvokeAsync(Valor);
    }
}