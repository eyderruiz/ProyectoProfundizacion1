@page "/ingresos/tipos-parqueadero"
@rendermode InteractiveServer

@inject PjrProject.Services.IIngresoService IngresoService

<H2Pro Texto="Tipos de Parqueadero" Centrado="true" />

@if (tipos == null)
{
    <p>Cargando tipos...</p>
}
else
{
    <ul>
        @foreach (var t in tipos)
        {
            <li>@t.Id â€” @t.Nombre</li>
        }
    </ul>
}

@code {
    private List<PjrProject.Models.TipoParqueaderoDto>? tipos;
    
    protected override async Task OnInitializedAsync()
    {
        tipos = await IngresoService.ObtenerTiposParqueaderoAsync();
    }
}